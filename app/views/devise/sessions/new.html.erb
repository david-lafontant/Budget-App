<div class="bg-fond_gris h-screen">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="grid grid-cols-3 gap-4flex bg-fond_blue h-16 items-center">
      <div class="pl-4">
        <%= link_to :root do %>
          <%= image_tag "back.svg", style: 'height:10px; width:auto;' %>
            <% end %>

      </div>
      <div>
        <h2 class="text-center leading-10 text-stone-300 font-bold">LOG IN</h2>
      </div>
      <div>
        <div class="actions flex justify-end pr-4">
          <%= f.submit "Next", :class=>"text-stone-300" %>
        </div>

      </div>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control
          block
          w-full
          px-3
          py-1.5
          text-base
          font-normal
          text-gray-700
          bg-white bg-clip-padding
          border border-solid border-gray-300
          rounded
          transition
          ease-in-out
          m-0
          focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        text-gray-700
        bg-white bg-clip-padding
        border border-solid border-gray-300
        rounded
        transition
        ease-in-out
        m-0
        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%=f.check_box :remember_me %>
          <%=f.label :remember_me %>
      </div>
      <% end %>

        <% end %>

</div>

